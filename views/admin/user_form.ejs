<div class="col-lg-5">
    <div class="card">
        <div class="card-header">
            <h5 class="float-left">Tambah User</h5>
            <a href="/users" class="btn btn-sm btn-danger float-right"><i class="fa fa-times"></i></a>
        </div>
        <form action="/users-add" method="post">
            <div class="card-body">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label>Fullname</label>
                    <input type="text" class="form-control" id="fullname" name="fullname" placeholder="Fullname" value="">
                </div>
                <div class="form-group">
                    <label>Email address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="">
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary text-white float-right">Tambah</button>
            </div>
        </form>        
    </div>
</div>