<div class="col-lg-4">
    <div class="card">
        <div class="card-header">
            <h5>user profile</h5>
        </div>
        <div class="card-body">
            <form method="post" action="/profile">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <div class="form-group">
                    <label>Nama </label>
                    <input type="text" id="firstname" required="required" class="form-control"
                        value="{{ q_user.fullname}}">
                </div>
                <div class="form-group">
                    <label>Email </label>
                    <input type="text" id="email" required="required" class="form-control" value="{{q_user.email}}">
                </div>
            </form>

        </div>
        <div class="card-footer">

        </div>
    </div>
</div>